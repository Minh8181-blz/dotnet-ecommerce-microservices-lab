@using Website.MarketingSite.Models.ViewModels.Products
@using Utilities.PlainText

@model IEnumerable<ProductViewModel>

@if (Model != null && Model.Any())
{
    <div class="newest-product-grid">
        <div class="container">
            <h2>Newest Item</h2>
            <div class="container-fluid">
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <div class="col-xl-4 col-lg-4 col-md-4 col-12">
                            <div class="product">
                                <div class="product-img">
                                    <img src="https://via.placeholder.com/550x320" alt="">
                                </div>
                                <div class="product-body">
                                    <h3 class="product-name"><a href="#" tabindex="-1">@product.Name</a></h3>
                                    <h4 class="product-price">$@PriceHelper.GetDisplayedPrice(product.Price)</h4>
                                    <div class="product-btns">
                                        <div class="add-to-wishlist" data-product-id="@product.Id" title="Add to wishlist"><i class="fa fa-heart-o"></i></div>
                                        <div class="add-to-cart" data-product-id="@product.Id" title="Add to cart"><i class="fa fa-shopping-cart"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

